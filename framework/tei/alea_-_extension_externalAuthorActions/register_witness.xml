<?xml version="1.0" encoding="UTF-8"?>
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="register_witness">
  <a:name>Register Witness</a:name>
  <a:description>Register Witness</a:description>
  <a:smallIconPath href="${frameworks}/sdf/pin-16.png"/>
  <a:largeIconPath href="${frameworks}/sdf/pin-24.png"/>
  <a:operations>
    <a:operation id="InsertFragmentOperation">
      <a:xpathCondition>local-name() = 'sourceDesc' and not(./*:listWit)</a:xpathCondition>
      <a:arguments>
        <a:argument name="fragment"><![CDATA[
<listWit xmlns="http://www.tei-c.org/ns/1.0">
    <witness xmlns="http://www.tei-c.org/ns/1.0" xml:id="${ask('Textzeuge',combobox,(${xpath_eval(string-join(for $w in doc("${pdu}/WitnessCatalogue.xml")/*:TEI/*:text/*:body//*:witness return concat("'", $w/@xml:id, "':'", $w/@xml:id, ' = ', $w/*:abbr[@type='siglum'][1], "'"), ';')  )}), '')}"/>
</listWit>]]>
        </a:argument>
      </a:arguments>
    </a:operation>
    <a:operation id="InsertFragmentOperation">
      <a:xpathCondition>local-name() = 'listWit'</a:xpathCondition>
      <a:arguments>
        <!-- TODO: don't allow duplicates! -->
        <a:argument name="fragment"><![CDATA[<witness xmlns="http://www.tei-c.org/ns/1.0" xml:id="${ask('Textzeuge',combobox,(${xpath_eval(string-join(for $w in doc("${pdu}/WitnessCatalogue.xml")/*:TEI/*:text/*:body//*:witness return concat("'", $w/@xml:id, "':'", $w/@xml:id, ' = ', $w/*:abbr[@type='siglum'][1], "'"), ';')  )}), '')}"/>]]>
        </a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
