	<x:expect label="results in 3 table columns">
	    <ht:table>
		<ht:tr>...</ht:tr>
		<ht:tr>...</ht:tr>
		<ht:tr>
		    <ht:td style="...">2</ht:td>
		    <ht:td style="...">Aa Bb Cc </ht:td>
		    <ht:td>Dd Ee Ff</ht:td>
		</ht:tr>
	    </ht:table>
	</x:expect>
    </x:scenario>

