<?xml version="1.0" encoding="UTF-8"?>
<!-- An author action for unwrapping a choice element and preserving its content.
-->
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="unwrap-choice">
  <a:name>Unwrap choice</a:name>
  <a:description>Remove a choice element and preserve its content following reasonable rules</a:description>
  <a:smallIconPath href="${framework}/images/unchoice-16.png"/>
  <a:largeIconPath href="${framework}/images/unchoice-24.png"/>
  <a:operations>
    <a:operation id="XSLTOperation">
      <a:xpathCondition>
        ancestor::*:choice[1][*:corr] |
        ancestor::*:choice[1][*:sic]
      </a:xpathCondition>
      <a:arguments>
        <!--a:argument name="externalParams"><![CDATA[keep=${ask('Choose text to keep:', combobox(${xpath_eval(concat('corr: ', ancestor::*:choice/*:corr/text()))}:'corr'; 'sic: ':'sic'), 'corr')}]]></a:argument-->
        <a:argument name="externalParams"><![CDATA[keep=${ask('Choose text to keep:', combobox, (${xpath_eval(concat("'corr':'corr: ", ancestor::*:choice/*:corr/text(), "'", ';', "'sic':'sic: ", ancestor::*:choice/*:sic/text(), "'"))}), 'corr')}]]></a:argument>
        <a:argument name="script">${framework}/resources/unwrap_choice.xsl</a:argument>
        <a:argument name="sourceLocation">ancestor::*:choice[1]</a:argument>
        <a:argument name="targetLocation">ancestor::*:choice[1]</a:argument>
        <a:argument name="action">Replace</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
