<?xml version="1.0" encoding="UTF-8"?>
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.tei-c.org/ns/1.0"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="add-corr">
  <a:name>Add Corr</a:name>
  <a:description>Correct apparent error</a:description>
  <a:smallIconPath href="${framework}/images/corr-16.png"/>
  <a:largeIconPath href="${framework}/images/corr-24.png"/>
  <a:operations>
    <a:operation id="SurroundWithFragmentOperation">
      <a:xpathCondition>local-name() = 'l' or local-name() = 'lem' or local-name() = 'rdg' or local-name() = 'head'</a:xpathCondition>
      <a:arguments>
        <a:argument name="fragment">
<choice xmlns="http://www.tei-c.org/ns/1.0">
    <sic/>
    <corr><![CDATA[${ask('Korrektur', '')}]]></corr>
</choice>
        </a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
