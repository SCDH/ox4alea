<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="sel-language">
  <a:name>Change language</a:name>
  <a:description>Select a language for the current element.</a:description>
  <a:largeIconPath href="${framework}/images/lang-24.png"/>
  <a:operations>
    <a:operation id="ChangeAttributeOperation">
      <a:xpathCondition>true()</a:xpathCondition>
      <a:arguments>
        <a:argument name="name">lang</a:argument>
        <a:argument name="namespace">http://www.w3.org/XML/1998/namespace</a:argument>
        <a:argument name="value"><![CDATA[${ask('Select language', combobox, (${xpath_eval(string-join(for $lang in //*:teiHeader/*:profileDesc/*:langUsage/*:language return concat("'", $lang/@ident, "':'", normalize-space($lang), "'"), ';'))}), '')}]]></a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
