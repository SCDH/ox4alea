<?xml version="1.0" encoding="UTF-8"?>
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="add_note">
  <a:name>Add Note</a:name>
  <a:description>Fußnote einfügen</a:description>
  <a:smallIconPath href="${framework}/images/comment-16.png"/>
  <a:largeIconPath href="${framework}/images/comment-24.png"/>
  <a:operations>
    <a:operation id="InsertFragmentOperation">
      <a:arguments>
        <a:argument name="fragment"><note xmlns="http://www.tei-c.org/ns/1.0" xml:id="${id}">${caret}</note></a:argument>
        <a:argument name="goToNextEditablePosition">false</a:argument>
        <a:argument name="insertLocation"/>
        <a:argument name="insertPosition">Inside as first child</a:argument>
        <a:argument name="schemaAware">false</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accelerator>ctrl shift N</a:accelerator>
  <a:enabledInReadOnlyContext>false</a:enabledInReadOnlyContext>
</a:authorAction>
