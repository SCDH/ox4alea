<?xml version="1.0" encoding="UTF-8"?>
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="instert_stanza">
  <a:name>New Stanza</a:name>
  <a:description>New Stanza</a:description>
  <a:smallIconPath href="${framework}/images/add_stanza-16.png"/>
  <a:largeIconPath href="${framework}/images/add_stanza-24.png"/>
  <a:operations>
    <a:operation id="InsertFragmentOperation">
      <a:xpathCondition>local-name()='l'</a:xpathCondition>
      <a:arguments>
        <a:argument name="fragment"><lg xmlns="http://www.tei-c.org/ns/1.0"><l/></lg></a:argument>
        <a:argument name="insertLocation">..</a:argument>
        <a:argument name="insertPosition">After</a:argument>
      </a:arguments>
    </a:operation>
    <a:operation id="InsertFragmentOperation">
      <a:xpathCondition>local-name()='lg'</a:xpathCondition>
      <a:arguments>
        <a:argument name="fragment"><lg xmlns="http://www.tei-c.org/ns/1.0"><l/></lg></a:argument>
        <a:argument name="insertPosition">After</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accelerator>shift ENTER</a:accelerator>
  <a:accessKey>s</a:accessKey>
  <a:enabledInReadOnlyContext>false</a:enabledInReadOnlyContext>
</a:authorAction>
