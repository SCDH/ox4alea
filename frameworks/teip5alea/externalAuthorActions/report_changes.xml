<?xml version="1.0" encoding="UTF-8"?>
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="report_changes">
  <a:name>Report changes</a:name>
  <a:description>Inserts a new &lt;change> to &lt;revisionDesc></a:description>
  <a:operations>
    <a:operation id="InsertFragmentOperation">
      <a:xpathCondition>self::*:revisionDesc | self::*:change</a:xpathCondition>
      <a:arguments>
        <a:argument name="fragment"><![CDATA[<change xmlns="http://www.tei-c.org/ns/1.0" when="${date(yyyy-MM-dd)}" who="${author.name}"/>]]></a:argument>
        <a:argument name="insertLocation">ancestor-or-self::*:revisionDesc</a:argument>
        <a:argument name="insertPosition">Inside as last child</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
