<?xml version="1.0" encoding="UTF-8"?>
<!-- editing atom -->
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="mre.save.position">
  <a:name>Save the current caret position</a:name>
  <a:description>Inserts an anchor and stores its ID in the editor variable ${anchorId}.</a:description>
  <a:operations>
    <a:operation id="de.wwu.scdh.oxbytei.InsertAnchorOperation">
      <a:xpathCondition>true()</a:xpathCondition>
      <a:arguments>
        <a:argument name="anchor">anchor</a:argument>
        <a:argument name="anchorNamespace">http://www.tei-c.org/ns/1.0</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
