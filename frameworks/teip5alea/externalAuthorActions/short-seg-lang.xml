<?xml version="1.0" encoding="UTF-8"?>
<!-- user action -->
<!-- short cut for surrounding the user selection with <seg> and selecting its language -->
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="short.seg.lang">
  <a:name>Language (Selection)</a:name>
  <a:description>Set language for selection.</a:description>
  <a:smallIconPath href="${framework}/images/seg-lang-16.png"/>
  <a:largeIconPath href="${framework}/images/seg-lang-24.png"/>
  <a:operations>
    <a:operation id="ExecuteMultipleActionsOperation">
      <a:xpathCondition>true()</a:xpathCondition>
      <a:arguments>
        <a:argument name="actionIDs">atom.seg, select.language</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
