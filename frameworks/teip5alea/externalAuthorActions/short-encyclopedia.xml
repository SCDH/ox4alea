<?xml version="1.0" encoding="UTF-8"?>
<!-- user action -->
<!-- A short cut for inserting a reference to a encyclopedia lemma -->
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="short.encyclopedia">
  <a:name>Encyclopedia</a:name>
  <a:description>Insert a reference to a encyclopedia lemma.</a:description>
  <a:smallIconPath href="${framework}/images/encyclopedia-16.png"/>
  <a:largeIconPath href="${framework}/images/encyclopedia-24.png"/>
  <a:operations>
    <a:operation id="ExecuteMultipleActionsOperation">
      <a:xpathCondition>true()</a:xpathCondition>
      <a:arguments>
        <a:argument name="actionIDs">atom.bibref.encyclopedia, sel.bibref, atom.bibref.update.siglum, atom.move.caret.title</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
