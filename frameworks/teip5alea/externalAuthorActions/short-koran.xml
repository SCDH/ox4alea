<?xml version="1.0" encoding="UTF-8"?>
<!-- user action -->
<!-- A short cut for annotating the user selection as a citation from Koran -->
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="short.koran">
  <a:name>Koran</a:name>
  <a:description>Annotatie the user selection as a citation from Koran.</a:description>
  <a:operations>
    <a:operation id="ExecuteMultipleActionsOperation">
      <a:xpathCondition>true()</a:xpathCondition>
      <a:arguments>
        <a:argument name="actionIDs">atom.seg, atom.move.caret.end, atom.seg.type.verbatim.holy, atom.bibref.koran</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
