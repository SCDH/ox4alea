<?xml version="1.0" encoding="UTF-8"?>
<!-- editing atom -->
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="work.id.edit">
  <a:name>Edit work ID</a:name>
  <a:description>Edit the work ID stored in the TEI element.</a:description>
  <a:operations>
    <a:operation id="ChangeAttributeOperation">
      <a:xpathCondition>ancestor-or-self::TEI</a:xpathCondition>
      <a:arguments>
        <a:argument name="elementLocation">ancestor-or-self::TEI</a:argument>
        <a:argument name="name">xml:id</a:argument>
        <a:argument name="value">${ask('Title / ID', generic, '${xpath_eval(ancestor-or-self::TEI/@xml:id)}', @title)}</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
